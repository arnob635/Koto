<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="32dp">

        <ImageView
            android:id="@+id/itemimageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            app:srcCompat="@mipmap/kotolauncher_foreground" />

        <TextView
            android:id="@+id/itemtextmain"
            android:layout_width="254dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/itemimageview"
            android:text="Stuff I Definitely Need"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/itemtextamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itemimageview"
            android:layout_toEndOf="@+id/itemimageview"
            android:text="Spent koto??"
            android:textColor="@color/colorAccent"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/itemdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itemimageview"
            android:layout_toStartOf="@+id/itemDelete"
            android:text="Date"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/itemDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_clear_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>